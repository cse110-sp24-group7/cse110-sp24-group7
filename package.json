{
	"devDependencies": {
		"jest": "^29.7.0",
		"jsdoc": "^4.0.3",
		"prettier": "^3.2.5"
	},
	"scripts": {
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"format": "prettier --write --ignore-path .prettierignore ./source/project/**/*.{html,css,js} ./specs/**/*.md",
		"lint-check": "prettier --check --ignore-path .prettierignore ./source/project/**/*.{html,css,js} ./specs/**/*.md",
		"jsdoc": "jsdoc -c ./source/project/config/jsdocs_conf.json"
	},
	"type": "module",
	"jest": {
		"transform": {},
		"verbose": true
	}
}
