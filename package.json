{
	"name": "devjournal",
	"version": "1.0.0",
	"description": "Akatsuki 7's CSE 110 Developer Journal",
	"main": "./source/project/scripts/main.js",
	"author": "Akatsuki 7",
	"type": "commonjs",
	"devDependencies": {
		"@babel/core": "^7.24.6",
		"@babel/eslint-parser": "^7.24.6",
		"@babel/preset-env": "^7.24.6",
		"babel-jest": "^29.7.0",
		"electron": "^30.0.8",
		"eslint": "^8.57.0",
		"eslint-plugin-node": "^11.1.0",
		"jest": "^29.7.0",
		"jest-puppeteer": "^10.0.1",
		"jsdoc": "^4.0.3",
		"prettier": "^3.2.5",
		"prettier-eslint": "^16.3.0",
		"puppeteer": "^22.10.0"
	},
	"scripts": {
		"test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
		"prettier:fix": "prettier --write --ignore-path .prettierignore ./source/project/**/*.{html,css,js} ./specs/**/*.md",
		"prettier:check": "prettier --check --ignore-path .prettierignore ./source/project/**/*.{html,css,js} ./specs/**/*.md",
		"jsdoc": "jsdoc -c ./source/project/config/jsdoc.config.json",
		"eslint:check": "eslint ./source/project/**/*.js ./source/project/components/**/*.js ./source/project/scripts/**/*.js",
		"eslint:fix": "eslint --fix ./source/project/**/*.js ./source/project/components/**/*.js ./source/project/scripts/**/*.js --debug",
		"start": "electron ."
	},
	"jest": {
		"preset": "jest-puppeteer",
		"transform": {},
		"verbose": true,
		"testPathIgnorePatterns": [
			"./source/project/__tests__/E2E"
		]
	},
	"dependencies": {
		"sqlite3": "^5.1.7"
	},
	"eslintConfig": {
		"extends": [
			"eslint:recommended",
			"plugin:node/recommended"
		],
		"parser": "@babel/eslint-parser",
		"parserOptions": {
			"ecmaVersion": 6,
			"sourceType": "module",
			"requireConfigFile": false,
			"ecmaFeatures": {
				"jsx": true
			}
		},
		"env": {
			"node": true,
			"es6": true
		},
		"ignorePatterns": [
			"source/project/__tests__/**/*.js",
			"source/project/docs/**/*.js",
			"source/project/config/**/*.js"
		],
		"rules": {
			"no-var": "error",
			"prefer-const": "warn",
			"no-console": "off",
			"no-unused-vars": "warn",
			"no-undef": "warn",
			"no-redeclare": "error",
			"prefer-arrow-callback": "warn",
			"node/no-unpublished-require": "off"
		}
	}
}
